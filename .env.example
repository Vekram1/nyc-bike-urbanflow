# Root-level defaults for local development.
# Copy to `.env.local` and adjust per environment.

DATABASE_URL=postgres://urbanflow:urbanflow@127.0.0.1:5432/urbanflow

# Serving-view signing keys (dev only). Use strong secrets for shared envs.
SV_KEY_MATERIAL_JSON={"k1":"dev-secret"}

# Optional system selector.
SYSTEM_ID=citibike-nyc
POLICY_DEFAULT_VERSION=rebal.greedy.v1
POLICY_AVAILABLE_VERSIONS=rebal.greedy.v1,rebal.global.v1

# Aggressive policy defaults (higher impact, less realistic).
POLICY_PENDING_TIMEOUT_MS=15000
POLICY_MAX_MOVES=240
POLICY_MAX_MOVES_PER_RUN=240
POLICY_BIKE_MOVE_BUDGET_PER_STEP=240
POLICY_MAX_STATIONS_TOUCHED=200
POLICY_MAX_NEIGHBORS=12
POLICY_NEIGHBOR_RADIUS_M=4000
POLICY_TARGET_ALPHA=0.45
POLICY_TARGET_BETA=0.55
POLICY_WORKER_CLAIM_ERROR_BACKOFF_MS=2000
